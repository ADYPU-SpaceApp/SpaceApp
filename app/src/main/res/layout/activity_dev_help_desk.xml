<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color" >

    <TextView
        android:id="@+id/txtDevHelpDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dev Help Desk"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/btnCreateTicketDevHelpDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Ticket"
        android:layout_below="@id/txtDevHelpDesk"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnViewTicketsDevHelpDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tickets"
        android:layout_below="@id/btnCreateTicketDevHelpDesk"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnFaqDevHelpDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:layout_below="@id/btnViewTicketsDevHelpDesk"
        android:layout_centerHorizontal="true" />


</RelativeLayout>