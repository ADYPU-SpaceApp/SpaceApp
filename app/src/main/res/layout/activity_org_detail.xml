<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/orgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/spaceapp_logo_round"
        android:contentDescription="organisation Logo"/>

    <TextView
        android:id="@+id/orgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Name" />

    <TextView
        android:id="@+id/orgEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orgName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Email" />

    <TextView
        android:id="@+id/totalUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orgEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Total User" />

    <Button
        android:id="@+id/disableOrgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalUsers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ABC Organisation" />

</RelativeLayout>