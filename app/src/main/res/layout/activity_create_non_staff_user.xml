        <!--    Select Department -->

        <TextView
            android:id="@+id/txtSelectDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtCreateStudentEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Select Department:"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSelectDepartment"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

<!--        Select Course -->

        <TextView
            android:id="@+id/txtSelectCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spnDepartment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Select Course:"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSelectCourse"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

<!--        Select Class -->

        <TextView
            android:id="@+id/txtSelectClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spnCourse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Select Batch:"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSelectClass"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/edtCreateStudentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnBatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/edtCreateStudentConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtCreateStudentPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="@string/confirm_password_hint"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:importantForAutofill="no" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateStudent"
            android:layout_width="263dp"
            android:layout_height="43dp"
            android:layout_below="@+id/edtCreateStudentConfirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:text="@string/create_user_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    </RelativeLayout>
</ScrollView>