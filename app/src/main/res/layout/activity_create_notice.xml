    <Button
        android:id="@+id/btnSelectNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Notice"
        android:layout_below="@id/edtNoticeTitle" />

    <TextView
        android:id="@+id/txtSelectedFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:layout_below="@id/btnSelectNotice"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSubmitNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSelectedFileName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Create Notice"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>