<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_bg">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsButton"
        android:contentDescription="settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/space_title"
        app:layout_constraintBottom_toTopOf="@+id/profileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profileButton"
        android:contentDescription="profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:background="@drawable/astro"
        app:layout_constraintBottom_toTopOf="@+id/openChatRoomButton"
        app:layout_constraintEnd_toStartOf="@+id/communityButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/communityButton"
        android:layout_width="42.54dp"
        android:layout_height="42.54dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/multimedia_space"
        android:contentDescription="communityButton"
        app:layout_constraintBottom_toTopOf="@+id/viewNoticeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileButton"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewNoticeButton"
        android:layout_width="42.54dp"
        android:layout_height="42.54dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="329dp"
        android:background="@drawable/community_space"
        android:contentDescription="viewNoticeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/openChatRoomButton"
        app:layout_constraintTop_toBottomOf="@+id/communityButton"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/openChatRoomButton"
        android:layout_width="42.54dp"
        android:layout_height="42.54dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/chat_n_service_space"
        android:contentDescription="openChatRoomButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewNoticeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileButton"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>