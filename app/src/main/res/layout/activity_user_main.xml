<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181b27">

    <ImageView
        android:id="@+id/imgUserDp"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:contentDescription="userDp"
        android:src="@drawable/avatar"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/imgUserDp"
        android:text="Hello World!"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/btnNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="notification"
        android:src="@drawable/notification"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/txtGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:layout_below="@id/imgUserDp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtGreetingOrgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUserDp"
        android:layout_toEndOf="@id/txtGreeting"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="Space"
        android:textColor="#fff"
        android:textSize="30sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGreeting"
        android:foregroundGravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnChatModule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="card"
                android:src="@drawable/card"/>

            <ImageView
                android:id="@+id/btnDocsCenterModule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="card2"
                android:src="@drawable/card2"/>

            <ImageView
                android:id="@+id/btnCommunityModule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="card3"
                android:src="@drawable/card3"/>

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
