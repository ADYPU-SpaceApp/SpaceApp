<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btnBackCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noPostTextCommunity"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_marginEnd="8dp"
        android:text="No Post"
        android:textSize="100sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<!--        app:layout_constraintStart_toBottomOf="@id/btnBackCommunity" />-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/community_post_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        tools:listitem="@layout/community_post_layout"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<!--        app:layout_constraintStart_toBottomOf="@id/btnBackCommunity" />-->

</androidx.constraintlayout.widget.ConstraintLayout>